 */
public class Part2 {
    public String findSimpleGene(String dna, int startCodon, int stopCodon) {
        //Convert dna into all uppercase letters
        String newDNA = dna.toUpperCase();
        //Find index of start codon, store indexOfStart
        int indexOfStart = findStartCodon(newDNA); 
        //If no start codon "ATG" or stop codon, return empty string
        if (indexOfStart == -1) {
            return "";
        } 
        //Find index of stop codon, store indexOfStop
        int indexTAA = findStopCodon(newDNA, indexOfStart, "TAA");
        int indexTGA = findStopCodon(newDNA, indexOfStart, "TGA");
        int indexTAG = findStopCodon(newDNA, indexOfStart, "TAG");
        int minIndex = Math.min(indexTAA, Math.min(indexTGA, indexTAG));
        //Find substring = gene
        String gene = newDNA.substring(indexOfStart, minIndex + 3);
        if (gene.length() % 3 == 0){
            return gene;
        } 
    return "";
    }
    
    public int findStartCodon (String dna) {
        int indexOfStart = dna.indexOf("ATG");
        if (indexOfStart == -1) {
            return -1;
        }
        return indexOfStart;
    }
    
    public int findStopCodon (String dna, int startIndex, String stopCodon) {
        //Search dna, if "TAA" "TGA" or "TAG" are found, compare the index of each and return the smallest index
        int currIndex = dna.indexOf(stopCodon, startIndex + 3);
        //If no stop codon, return out of bounds
        if (currIndex != -1) {
            if ((currIndex - startIndex) % 3 == 0) {
                return currIndex;
            }
            //update currIndex to find next occurrence of the stop codon
            currIndex = dna.indexOf(stopCodon, currIndex+3);
        }
        return -1;
    }
    
    public void testSimpleGene() {
        //DNA with no ATG, EMPTY STRING
        System.out.println(findSimpleGene("", 0, 0));
        //DNA with no TAA, EMPTY 
        System.out.println(findSimpleGene("ATGATCCTACGCA", 0, 0));
        //DNA with no ATG or TAA, EMPTY
        System.out.println(findSimpleGene("ATAATCCTACGCA", 0, 0));
        //Correct DNA strand 
        System.out.println(findSimpleGene("ATGATCCTATAAA", 0, 0));
        //ATG and TAA, but not mult of 3
        System.out.println(findSimpleGene("ATGATCCTACTAA", 0, 0));
    }
}

